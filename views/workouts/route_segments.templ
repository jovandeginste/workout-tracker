package workouts

import (
	"github.com/invopop/ctxi18n/i18n"
	"github.com/jovandeginste/workout-tracker/pkg/database"
	"github.com/jovandeginste/workout-tracker/views/helpers"
)

templ RouteSegments(segments []*database.RouteSegmentMatch) {
	{{ pu := helpers.CurrentUser(ctx).PreferredUnits() }}
	<table>
		<thead>
			<tr>
				<th></th>
				<th>{ i18n.T(ctx, "Name") }</th>
				<th>{ i18n.T(ctx, "Distance") }</th>
				<th>{ i18n.T(ctx, "Duration") }</th>
				<th>{ i18n.T(ctx, "Speed") }</th>
				<th>{ i18n.T(ctx, "Tempo") }</th>
			</tr>
		</thead>
		<tbody class="whitespace-nowrap font-mono">
			for _, s := range segments {
				<tr>
					<td>
						@helpers.IconFor("route-segment")
					</td>
					<td class="flex flex-wrap gap-1">
						<a href={ templ.SafeURL(helpers.RouteFor(ctx, "route-segment-show", s.RouteSegment.ID)) }>{ s.RouteSegment.Name }</a>
					</td>
					<td>
						{ helpers.HumanDistance(ctx, s.Distance) } { pu.Distance() }
					</td>
					<td>{ helpers.HumanDuration(s.Duration) }</td>
					<td>
						{ helpers.HumanSpeed(ctx, s.AverageSpeed()) } { pu.Speed() }
					</td>
					<td>
						{ helpers.HumanTempo(ctx, s.AverageSpeed()) } { pu.Tempo() }
					</td>
				</tr>
			}
		</tbody>
	</table>
}
